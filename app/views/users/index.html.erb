<h1 align="center">All alpha bloggers</h1>
<% @users.each do |user| %>
<ul class="listing">
  <div align="center">
    <%= will_paginate %>
    <div class = "row">
      <div class = "well col-md-4 col-md-offset-4">
        <li>
          <%= link_to gravatar_for(user), user_path(user) %>
        </li>
        <li class ="article_title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li class="small">
          <%= pluralize(user.articles.count, "article") if user.articles %>
        </li>
        <% if logged_in? && current_user.admin? %>
          <li>
            <%= link_to "Delete this user", user_path(user), method: :delete,
              data: { confirm: "Are you surre you want to delete the user and all their articles?"} %>
          </li>
        <% end %>
      </div>
    </div>
  </div>
</ul>
<%end%>